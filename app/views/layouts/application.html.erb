<!DOCTYPE html>
<html>
  <head>
    <title>CK | <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<meta name="viewport" content="width=device-width, initial-scale=1.0">

  </head>
 <%= render 'layouts/header' %>
  <body class="text-brown4 background-image">
      <% if yield(:lang) == 'en' %>
      <%= render 'en/navbar'%>
    <%   else %>
      <%= render 'de/navbar' %>
    <%   end %>
      <div class="container bg-grey0 p-3 p-md-5 p-1">
        <%= yield %>
      </div>
      <footer class="footer container-fluid bg-brown4 d-flex justify-content-around border-top border-orange2">
          <% if yield(:lang) == 'en' %>
      <%= render 'en/footer'%>
    <%   else %>
      <%= render 'de/footer' %>
    <%   end %>
      </div>
  </body>
</html>
